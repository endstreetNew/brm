@page "/boxing"
@page "/boxing/{tabNo:int}/{boxNo}"


@inject BRMDbService db

<TabControl PageActivate="OnPageActivate" ActivePageId="@tabNo">
    <TabPage Text="Batching" Id="1" Enabled="true">
        @if(db.session.Office.OfficeType == "LO")
        {
            <LOBatch></LOBatch>
        }
        else
        {
            <RMCBatch></RMCBatch>
        }
    </TabPage>
    <TabPage Text="Waybills" Id="2" Enabled="true">
        <BatchWaybill></BatchWaybill>
    </TabPage>
    <TabPage Text="Re-Boxing" Id="3" Enabled="@(db.session.Office.OfficeType != "LO")">
        <ReboxTab boxNo="@boxNo"></ReboxTab>
    </TabPage>
    <TabPage Text="TDW Dispatch" Id="4" Enabled="@(db.session.Office.OfficeType != "LO")">
        <TdwBatch></TdwBatch>
    </TabPage>
</TabControl>


@code 
{
    [Parameter]
    public string boxNo { get; set; }
    [Parameter]
    public int tabNo { get; set; }

    protected override void OnInitialized()
    {
        if (tabNo == 0)
        {
            if (db.session.IsRmc())
            {
                tabNo = 3;
            }
            else
            {
                tabNo = 1;
            }
        }

    }

    private void OnPageActivate(int e)
    {
        tabNo = e;
    }
}
