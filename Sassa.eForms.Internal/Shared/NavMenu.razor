@inject DocumentStore dstore

<div class="user-container"><LoginDisplay UserAccess="OnAccesChanged" /></div>
@if (IsAuthorised)
{
<div class="menu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Track">
                Track My Application
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="documents/">
                Upload Documents
            </NavLink>
        </li>
    </ul>
</div>
}
else
{
    <span>Not Authorized</span>
}
@code
{
    protected bool IsAuthorised { get; set; }

    protected void OnAccesChanged(bool isAuthorized)
    {
        IsAuthorised = isAuthorized;
    }

}