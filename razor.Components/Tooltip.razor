@if (showTip)
{
<div class="tooltip-wrapper">
    <span>
        @Text
        @if (ShowClose)
        {
            <button @onclick="@(() => { showTip = false; })" class="btn btn-primary" type="button">Close</button>
        }
    </span>
    @ChildContent
</div>
}
else
{
@ChildContent
}

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public bool ShowClose { get; set; }

    protected bool showTip;

    protected override void OnInitialized()
    {
        if(ShowClose)
        {
            showTip = true;
        }
    }
}